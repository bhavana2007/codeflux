    { "line": 1, "code": "  if (s.length !== t.length) return false;" },
    { "line": 2, "code": "  const freq = new Map();" },
    { "line": 3, "code": "  for (const ch of s) {" },
    { "line": 4, "code": "    freq.set(ch, (freq.get(ch) || 0) + 1);" },
    { "line": 5, "code": "  }" },
    { "line": 6, "code": "  for (const ch of t) {" },
    { "line": 7, "code": "    if (!freq.has(ch)) return false;" },
    { "line": 8, "code": "    freq.set(ch, freq.get(ch) - 1);" },
    { "line": 9, "code": "    if (freq.get(ch) === 0) freq.delete(ch);" },
    { "line": 10, "code": "  }" },
    { "line": 11, "code": "  return freq.size === 0;" },
    { "line": 12, "code": "}" }
